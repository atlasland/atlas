{
  "tasks": {
    "cache": "deno cache -r cli.ts error/mod.ts log/mod.ts console/mod.ts",
    "check": "deno check -r cli.ts error/mod.ts log/mod.ts console/mod.ts",
    "dev:website": "deno run -A --watch website/main.ts",
    "test": "deno test -A --no-check --coverage=./cov"
  },
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": true
  },
  "fmt": {
    "files": {
      "exclude": [
        ".git",
        ".deno",
        "cov"
      ]
    },
    "options": {
      "useTabs": true
    }
  },
  "lint": {
    "files": {
      "exclude": [
        ".git",
        ".deno",
        "cov"
      ]
    }
  }
}
