{
	"compilerOptions": {
		"allowJs": false,
		"lib": [
			"dom",
			"dom.iterable",
			"dom.asynciterable",
			"deno.ns",
			"deno.unstable"
		],
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"useUnknownInCatchVariables": true
	},
	"fmt": {
		"files": {
			"exclude": [
				".git",
				".deno",
				"cov"
			]
		},
		"options": {
			"useTabs": true
		}
	},
	"lint": {
		"files": {
			"exclude": [
				".git",
				".deno",
				"cov"
			]
		}
	},
	"tasks": {
		"cache": "deno cache --reload --lock=lock.json --lock-write --no-check cli.ts error/mod.ts log/mod.ts console/mod.ts && deno fmt",
		"check": "deno check cli.ts error/mod.ts log/mod.ts console/mod.ts",
		"dev:website": "deno run -A --watch website/main.ts",
		"test": "deno test -A --unstable --no-check --coverage=./cov"
	}
}
